{
	"compilerOptions": {
		"target": "ES5",
		"declaration": true,
		"outDir": "./dist/tsc",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"removeComments": true,
		"declarationDir": "./dist/types"
	},
	"include": ["src"]
}
